    <div class="form-group">
      <label>Company Name</label>
      <input class="form-control autocomplete" placeholder="Enter the company name" />
    </div>
    
    <div class="form-group">
      <label>Job Title</label>
      <input class="form-control autocomplete2" placeholder="Enter the job title"/>
    </div>

